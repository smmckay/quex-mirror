#ifndef QUEX_INCLUDE_GUARD__TOKEN__GENERATED
#define QUEX_INCLUDE_GUARD__TOKEN__GENERATED

/* For '--token-class-only' the following option may not come directly
 * from the configuration file.                                        */
#ifndef    QUEX_OPTION_PLAIN_C_EXT
#   define QUEX_OPTION_PLAIN_C_EXT
#endif
$$HEADER$$

$$HELPER_DEFINITIONS$$

struct $$TOKEN_CLASS$$_tag;

QUEX_INLINE void         $$TOKEN_CLASS$$_construct(struct $$TOKEN_CLASS$$_tag*);
QUEX_INLINE void         $$TOKEN_CLASS$$_copy(struct $$TOKEN_CLASS$$_tag*, 
                                              const struct $$TOKEN_CLASS$$_tag*);
QUEX_INLINE void         $$TOKEN_CLASS$$_destruct(struct $$TOKEN_CLASS$$_tag*);

/* NOTE: Setters and getters as in the C++ version of the token class are not
 *       necessary, since the members are accessed directly.                   */

QUEX_INLINE void         $$TOKEN_CLASS$$_set(struct $$TOKEN_CLASS$$_tag* me, 
                                             const QUEX_TYPE_TOKEN_ID    ID);

$$<token-take-text>------------------------------------------------------------
QUEX_INLINE bool         $$TOKEN_CLASS$$_take_text(struct $$TOKEN_CLASS$$_tag* me, 
                                                   const QUEX_TYPE_LEXATOM*    Begin, 
                                                   const QUEX_TYPE_LEXATOM*    End);
$$-----------------------------------------------------------------------------

$$<token-repetition>-----------------------------------------------------------
QUEX_INLINE size_t       $$TOKEN_CLASS$$_repetition_n_get(struct $$TOKEN_CLASS$$_tag*);
QUEX_INLINE void         $$TOKEN_CLASS$$_repetition_n_set(struct $$TOKEN_CLASS$$_tag*, size_t);
$$-----------------------------------------------------------------------------

 
typedef struct QUEX_SETTING_USER_CLASS_DECLARATION_EPILOG_EXT $$TOKEN_CLASS$$_tag {
    QUEX_TYPE_TOKEN_ID    id;
$$DISTINCT_MEMBERS$$
$$UNION_MEMBERS$$
#   ifdef     QUEX_OPTION_TOKEN_STAMPING_WITH_LINE_AND_COLUMN
#       ifdef QUEX_OPTION_COUNTER_LINE
        QUEX_TYPE_TOKEN_LINE_N    _line_n;
#       endif
#       ifdef  QUEX_OPTION_COUNTER_COLUMN
        QUEX_TYPE_TOKEN_COLUMN_N  _column_n;
#       endif
#   endif
$$BODY$$
} $$TOKEN_CLASS$$;


#endif /* QUEX_INCLUDE_GUARD__TOKEN__GENERATED */
