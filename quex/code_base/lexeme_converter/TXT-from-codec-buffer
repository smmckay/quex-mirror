QUEX_NAMESPACE_TOKEN_OPEN

#define __QUEX_FROM      $$CODEC$$

$$INC: lexeme_converter/generator/declarations.g$$

QUEX_NAMESPACE_TOKEN_CLOSE

#endif /* __QUEX_INCLUDE_GUARD__LEXEME_CONVERTER__$$CODEC$$__                */
