$$INC: definitions$$

QUEX_NAMESPACE_MAIN_OPEN

/* Tell/Seek/Move on basis of character index */
QUEX_INLINE size_t  QUEX_NAME(MF_tell)(QUEX_TYPE_ANALYZER* me);
QUEX_INLINE void    QUEX_NAME(MF_seek)(QUEX_TYPE_ANALYZER* me, const size_t);
QUEX_INLINE void    QUEX_NAME(MF_seek_forward)(QUEX_TYPE_ANALYZER*  me, const size_t);
QUEX_INLINE void    QUEX_NAME(MF_seek_backward)(QUEX_TYPE_ANALYZER* me, const size_t);
QUEX_INLINE void    QUEX_NAME(MF_undo)(QUEX_TYPE_ANALYZER* me);
QUEX_INLINE void    QUEX_NAME(MF_undo_n)(QUEX_TYPE_ANALYZER* me, size_t DeltaN_Backward);

QUEX_NAMESPACE_MAIN_CLOSE

