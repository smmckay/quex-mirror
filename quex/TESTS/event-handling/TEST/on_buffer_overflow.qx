token { X; }

mode X :
<skip_range: "/*" "*/">
<skip:       [ \t\n] >
{
    [^x]+ => TK_X;

    on_buffer_overflow { 
        printf("LexemeBegin: ((%p))", (const char*)LexemeBegin);
        printf("LexemeEnd:   ((%p)) + %i", (const char*)LexemeBegin, (int)(LexemeEnd - LexemeBegin));
        printf("BufferSize:  %i", (int)BufferSize);
    }
}

