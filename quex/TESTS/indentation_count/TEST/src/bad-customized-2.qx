token { 
    WORD;
    COLON;
    BAD;
}

mode X :
<indentation: 
    (\r\n)|\n => newline; 
    [ \t]     => whitespace; 
    [\:]      => bad;
>
<skip: [ \t] >
{
    on_indentation_bad { QUEX_NAME(error_code_clear)(&self); self_send1(QUEX_TKN_BAD, LexemeNull); }
    [a-z]+  => QUEX_TKN_WORD(Lexeme);
    [\:]    => QUEX_TKN_COLON(LexemeNull);
}
