token { 
    WORD;
    FAILURE;
    NEWLINE;
}

repeated_token { 
    DEDENT;
}

mode X :
<indentation: >
<skip: [ \t] >
{
    on_indent   { self_send(QUEX_TKN_NEWLINE, LexemeNull); self_send(QUEX_TKN_INDENT); }
    on_n_dedent { self_send(QUEX_TKN_NEWLINE, LexemeNull); self_send_n(ClosedN, QUEX_TKN_DEDENT); }
    on_nodent   { self_send(QUEX_TKN_NEWLINE, LexemeNull); }

    [a-z]+ => QUEX_TKN_WORD(Lexeme);
}
