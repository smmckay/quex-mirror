token { 
    WORD;
    FAILURE;
    NEWLINE;
    INDENTATION_ERROR;
    INDENTATION_BAD;
}

repeated_token { 
    DEDENT;
}

mode X :
<indentation: >
<skip: [ \t] >
{
    on_indent   { self_send1(QUEX_TKN_NEWLINE, LexemeNull); self_send1(QUEX_TKN_INDENT, LexemeNull); }
    on_n_dedent { self_send1(QUEX_TKN_NEWLINE, LexemeNull); self_send_n(ClosedN, QUEX_TKN_DEDENT); }
    on_nodent   { self_send1(QUEX_TKN_NEWLINE, LexemeNull); }

    on_indentation_error { self_send1(QUEX_TKN_INDENTATION_ERROR, LexemeNull); }
    on_indentation_bad   { self_send1(QUEX_TKN_INDENTATION_BAD, LexemeNull);   }

    [a-z]+ => QUEX_TKN_WORD(Lexeme);
}
