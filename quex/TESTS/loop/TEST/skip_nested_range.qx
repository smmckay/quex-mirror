token { LETTER; STAR; CLOSING_BRACKET; }

mode X : 
<skip:       [ \t\n]                           >
<skip_nested_range: ("/-"|"/+") ("-/"|"+/")    >
<skip_nested_range: \C{"begin*"} \C{"end"}/"*" >
<skip_nested_range: "(" a/")"                  >
<skip_nested_range: "<" ">"|">>"               >
{
	[A-Z] => QUEX_TKN_LETTER(Lexeme);
	"*"   => QUEX_TKN_STAR;
	")"   => QUEX_TKN_CLOSING_BRACKET;
}
