    header {
    #ifdef __cplusplus
    #  include <cstdlib>   // for: atoi()
    #else
    #  include <stdlib.h>  // for: atoi()
    #endif
    }   

    mode ONE_AND_ONLY
    {   
        <<EOF>>     => QUEX_TKN_TERMINATION;

        [ \t\r\n]+  {}  
        "="         => QUEX_TKN_OP_EQUAL;
        [0-9]+      => QUEX_TKN_NUMBER(number=atoi((char*)Lexeme));
        [_a-zA-Z]+  => QUEX_TKN_IDENTIFIER(Lexeme);
    }   
